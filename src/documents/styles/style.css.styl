@import 'nib'

a, a:link
  cursor pointer

body.framed
  padding-top 0

body
  padding-top 60px
  background whitesmoke
  h1, h2, h3
    small
      color #777

table
  tfoot, tbody
    th
      border-top 1px solid #DDD

.tooltipster-base
  box-sizing content-box

#instructions
  .instruction
    min-height 147px
  .carousel-control.left, .carousel-control.right
    width 100px
    margin-top -10px

#codeframe
  iframe
    height 100%
    border none
    box-shadow 0 0 10px black

code
  background white
  color crimson

.btn.btn-highlight
  border 2px solid #428bca

.topright
  position absolute
  top 20px
  right 20px

#codeframe.refcode
  position absolute
  top 0
  right 10px
  left 10px
  bottom 10px

.refleft
  position fixed
  top 80px
  bottom 0
  left 0
  overflow-y scroll

.refright
  position fixed
  top 80px
  bottom 0
  right 0

.reflinks
  padding 16px

#leftnav
  padding-top 30px
  position fixed
  top 50px
  left 0
  bottom 0
  width 220px
  overflow-y scroll

#rightpane
  position fixed
  top 50px
  left 220px
  bottom 0
  right 0
  padding 0

code.jumbo, pre.jumbo
  padding 2px 4px
  font-size 30px
  display inline-table
  background white
  border 1px solid silver
  color crimson
  white-space pre

  span
    line-height normal

  dfn
    color dimgray
    font-family Arial
    font-size 16px
    text-align center

.indextile
  display inline-table
  box-shadow 0 0 10px gray
  text-align center
  padding 5px
  margin 5px
  background white
  border-radius 13px
  min-height 58px
  width 100%
  span
    display table-cell
    vertical-align middle
    text-align left
  span:first-child
    width 1%
    padding-right 8px
  img
    width 48px
    height 48px
    background white
    border 1px solid silver
    border-radius 8px

.indextile:hover
  box-shadow 0 0 10px black
  background azure

.indextile.active
  background #428bca
  color white

#overlay
  display none
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0,0,0,0.2)
  z-index 2000

.overlay-box-50
  position absolute
  top 60px
  left 50px
  right 50px
  bottom 50px

.heavyframe
  border 3px solid black
  box-shadow 0 0 10px black
  height 100%
  width 100%
  background whitesmoke

.closebox
  font-size 30px
  position absolute
  right 0
  top 0
  padding 5px

.closebox:hover
  color crimson
  text-shadow 0 0 5px white

.container-margins
  margin-left 20px
  margin-right 20px

.container-margins:before, .container-margins:after
  content ""
  display table
